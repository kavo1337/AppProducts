<Page x:Class="DESKTOP.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DESKTOP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Main">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="PingButton"
            Content="Проверить API"
            Padding="12,6"
            Margin="0,0,8,0"
            Click="PingButton_Click"/>
            <Button x:Name="LoadButton"
            Content="Обновить"
            Padding="12,6"
            Click="LoadButton_Click"/>
        </StackPanel>

        <TextBox x:Name="Output"
         Grid.Row="2"
         IsReadOnly="True"
         TextWrapping="Wrap"
         VerticalScrollBarVisibility="Auto"
         Height="70"/>

        <GroupBox Grid.Row="4" Header="Добавить продукт">
            <Grid Margin="8">
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Название:" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameBox" MinWidth="220"/>

                    <Label Content="Описание:" VerticalAlignment="Center"/>
                    <TextBox x:Name="DescriptionBox" MinWidth="80"/>

                    <Label Content="Название категории:" VerticalAlignment="Center"/>
                    <TextBox x:Name="categoryBox" MinWidth="80"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <Button x:Name="AddButton"
                        Content="Добавить"
                        Click="AddButton_Click"
                        Width="100"/>

                        <Button x:Name="DeleteButton"
                        Content="Удалить"
                        Margin="20,0,0,0"
                        Click="DeleteButton_Click"
                        Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="ProductsGrid"
          Grid.Row="6"
          AutoGenerateColumns="True"
          IsReadOnly="True"/>
    </Grid>
</Page>
